<!-- partials/error.ejs -->

<% if (errors && errors.length > 0) { %>
  <div class="alert alert-danger mt-3">
    <ul class="mb-0">
      <% errors.forEach(function(error) { %>
        <li><%= error.msg %></li>
      <% }); %>
    </ul>
  </div>
<% } %>

<% if (typeof error !== 'undefined' && error) { %>
  <div class="alert alert-danger mt-3">
    <%= error %>
  </div>
<% } %>
